@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.Simple>
@using ContentModels = CodeBase.Models;
@{
    Layout = "Site.cshtml";
}

<div id="grid"></div>
<script>
    var dataSource = new kendo.data.DataSource({
        transport: {
            read: {
                url: "http://task21/gridData.json",
                dataType: "json"
            }
        },
        schema: {
            data: "items"
        },
        pageSize: 10
    });
    $("#grid").kendoGrid({
        dataSource: dataSource,
        pageable: true
    });
</script>