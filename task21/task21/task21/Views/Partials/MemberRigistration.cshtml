@inherits Umbraco.Web.Mvc.UmbracoViewPage<CodeBase.ViewModels.RegisterModel>

<div class="container">
    <div class="form-container padding-bottom-50">
        <div class="form-content login-form">
            @{
                //if (!Umbraco.MemberIsLoggedOn())
                //{
                using (Html.BeginUmbracoForm("SubmitRegistration", "Member", System.Web.Mvc.FormMethod.Post, new { id = "register" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name)
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Name, new { placeholder = "Name" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email)
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password)
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { placeholder = "Password" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.ValidationSummary()
                        <div class="col-md-10" style="margin-top: 10px;">
                            <button name="Register" type="submit">Submit</button>
                        </div>
                    </div>
                }
                //}
                //else
                //{
                //    //todo: what about this case? redirect?
                //}
             }
        </div>
    </div>
</div>